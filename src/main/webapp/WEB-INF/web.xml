<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

  <!--FILTERS-->
  <!--Encoding filter-->
  <filter>
    <filter-name>Encoding_request_filter</filter-name>
    <filter-class>ua.epam.final_project.servlet_filter.filter.EncodingFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>Encoding_request_filter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>


  <!-- *WELCOME PAGE* -->
  <welcome-file-list>
    <welcome-file>/WEB-INF/view/main_page/main_page.jsp</welcome-file>
  </welcome-file-list>


  <!-- *ERROR PAGE* -->
  <error-page>
    <error-code>404</error-code>
    <location>/WEB-INF/view/error_page/error_404_page.jsp</location>
  </error-page>


  <!-- *SERVLETS* -->
  <!--About us-->
  <servlet>
    <servlet-name>about_us</servlet-name>
    <jsp-file>/WEB-INF/view/about_page/about_us_page.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>about_us</servlet-name>
    <url-pattern>/about</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>cabinet</servlet-name>
    <jsp-file>/WEB-INF/view/cabinet_page/cabinet.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>cabinet</servlet-name>
    <url-pattern>/cabinet</url-pattern>
  </servlet-mapping>

</web-app>