<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

  <!--FILTERS-->
  <!--Encoding filter-->
  <filter>
    <filter-name>Encoding_request_filter</filter-name>
    <filter-class>ua.epam.final_project.servlet.filter.EncodingFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>Encoding_request_filter</filter-name>
    <url-pattern>/</url-pattern>
  </filter-mapping>


  <!-- *WELCOME PAGE* -->
  <welcome-file-list>
    <welcome-file>/WEB-INF/view/mainPage/main_page.jsp</welcome-file>
  </welcome-file-list>


  <!-- *ERROR PAGE* -->
  <error-page>
    <error-code>404</error-code>
    <location>/WEB-INF/view/errorPage/error_page.html</location>
  </error-page>

  <!-- *SERVLETS* -->
  <!--Main page servlet-->
  <servlet>
    <servlet-name>login_page</servlet-name>
    <jsp-file>/WEB-INF/view/loginPage/login_page.html</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>login_page</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>

  <!--About us-->
  <servlet>
    <servlet-name>about_us</servlet-name>
    <jsp-file>/WEB-INF/view/aboutUsPage/about_us_page.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>about_us</servlet-name>
    <url-pattern>/about</url-pattern>
  </servlet-mapping>


</web-app>